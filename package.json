{
  "private": true,
  "name": "ayasofyazilim-core-project",
  "scripts": {
    "build": "turbo build",
    "start": "turbo start",
    "tcr": "cd apps/web && pnpm type-check:report",
    "dev:all": "turbo dev",
    "web": "turbo dev --filter web",
    "ssr": "turbo dev --filter ssr",
    "build:web": "cd apps/web && pnpm build",
    "build:ssr": "cd apps/ssr && pnpm build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "precommit": "turbo lint && turbo type-check",
    "precommit:lintstaged": "turbo lint-staged --filter ./apps/* --filter ./packages/*",
    "saas": "pnpm i @ayasofyazilim/saas@latest --filter ./apps/* --filter ./packages/actions --filter ./packages/ui",
    "saas-dev": "pnpm i @ayasofyazilim/unirefund-saas-dev@latest --filter ./apps/* --filter ./packages/actions --filter ./packages/ui",
    "unused": "npx knip",
    "fix-changes:web": "cd apps/web && pnpm format && pnpm lint:fix && pnpm type-check",
    "fix-changes:ssr": "cd apps/ssr && pnpm format && pnpm lint:fix && pnpm type-check"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.1",
    "@repo/typescript-config": "workspace:*",
    "eslint": "8.57.0",
    "husky": "^8.0.3",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.11",
    "turbo": "^2.1.2"
  },
  "packageManager": "pnpm@9.1.2",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "playwright": "^1.47.1"
  }
}